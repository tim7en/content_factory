# Environment Configuration for AI Content Factory
# Copy this file to .env and fill in your API keys

# Database
MONGODB_URI=mongodb://localhost:27017/ai_content_factory
REDIS_URL=redis://localhost:6379

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
HEYGEN_API_KEY=your_heygen_api_key_here
SUNO_AI_API_KEY=your_suno_ai_api_key_here

# Social Media APIs
YOUTUBE_API_KEY=your_youtube_api_key_here
TIKTOK_API_KEY=your_tiktok_api_key_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Trend Analysis
GOOGLE_TRENDS_API_KEY=your_google_trends_api_key_here

# Monetization
PATREON_CLIENT_ID=your_patreon_client_id_here
PATREON_CLIENT_SECRET=your_patreon_client_secret_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Music Streaming
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Application Settings
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_BUCKET=your_s3_bucket_name_here
AWS_REGION=us-east-1

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Content Factory Settings
MAX_CONCURRENT_GENERATIONS=5
CONTENT_STORAGE_PATH=./generated_content
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Quality Thresholds
MIN_VIDEO_QUALITY_SCORE=70
MIN_AUDIO_QUALITY_SCORE=75
MIN_ENGAGEMENT_PREDICTION=60

# Platform Publishing
AUTO_PUBLISH_ENABLED=false
PUBLISHING_SCHEDULE=0 9,15,21 * * *
CONTENT_APPROVAL_REQUIRED=true
NODE_ENV=development